{
    "name": "choreminder-dev-container",
    "image": "mcr.microsoft.com/devcontainers/base:ubuntu",
    "features": {
        "ghcr.io/devcontainers/features/python:1": {
            "version": "3.12"
        }
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "batisteo.vscode-django"
            ]
        }
    },
    "postCreateCommand": "pip install -r requirements_dev.txt",
    "remoteUser": "vscode"
}
